{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1>Pictures list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Avatar</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>Image4</th>
                <th>Image5</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td><a href="{{ path('picture_show', { 'id': picture.id }) }}">{{ picture.id }}</a></td>
                <td><img src="{{ app.request.basepath }}/uploads/{{ picture.avatar }}" class="thumbnail img_tmp" /></td>
                <td>{{ picture.avatar }}</td>
                <td>{{ picture.image1 }}</td>
                <td>{{ picture.image2 }}</td>
                <td>{{ picture.image3 }}</td>
                <td>{{ picture.image4 }}</td>
                <td>{{ picture.image5 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('picture_show', { 'id': picture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('picture_edit', { 'id': picture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('picture_new') }}">Create a new picture</a>
        </li>
    </ul>
{% endblock %}
